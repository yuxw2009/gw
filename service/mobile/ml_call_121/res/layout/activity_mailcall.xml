<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >


    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_marginTop="20dip"        
        android:gravity="center">
        
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"	  
	        android:gravity="center_vertical">
	        
		  <CheckBox android:text="正常模式-MODE_NORMAL" 
			    android:id="@+id/setModeNormal"
			    android:layout_marginTop="10dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"	
				android:layout_marginLeft="10px">
		   </CheckBox> 
		   
		  <CheckBox android:text="通话模式-MODE_IN_CALL" 
			    android:id="@+id/setModeIncall"
			    android:layout_marginTop="10dip"
				android:layout_width="wrap_content" 
				android:checked="true"
				android:layout_height="wrap_content"	
				android:layout_marginLeft="10px">
		   </CheckBox> 
		   
		   <CheckBox android:text="通话模式-MODE_IN_COMMUNICATION" 
			    android:id="@+id/MODE_IN_COMMUNICATION"
			    android:layout_marginTop="10dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"				
				android:layout_marginLeft="10px">
		   </CheckBox> 
		   
		   <CheckBox android:text="通话模式-voip mode" 
			    android:id="@+id/MODE_4"
			    android:layout_marginTop="10dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"				
				android:layout_marginLeft="10px">
		   </CheckBox> 
		   		   	   		       
        </LinearLayout>
        
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="20dip"   
	        android:gravity="center_vertical">
	        <EditText
		        android:id="@+id/peerNum"
		        android:layout_width="fill_parent"
		        android:layout_height="40dip"
		        android:layout_weight="1"		  
		        android:hint="@string/peer_num_label"
		        android:inputType="phone"
		        android:textStyle="bold"
		        android:textSize="15sp" >
		        <requestFocus />
		    </EditText>
	    </LinearLayout> 

    </LinearLayout>
   	<LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"	  
	        android:gravity="center_vertical"> 
    <Button
        android:id="@+id/StartCall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_margin="100sp"
        android:textSize="20sp"
        android:text="@string/start_call" />  
            </LinearLayout> 
  
</LinearLayout>
