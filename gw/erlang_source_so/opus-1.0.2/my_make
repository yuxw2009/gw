include/opus_multistream.h \
src/opus_private.h

SOURCES2 = $(CELT_SOURCES2) $(SILK_SOURCES) $(OPUS_SOURCES)
LOCALOBJS = $(wildcard *.o)

ADDEDFLAGS=-fvisibility=hidden  -minline-stringops-dynamically -maccumulate-outgoing-args -minline-all-stringops
libopus:
	$(CC) -O3 $(CFLAGS) $(ADDEDFLAGS) -c $(SOURCES2) $(INCLUDES)

decoder:
	$(CC) -O3 $(CFLAGS) $(ADDEDFLAGS) -c src/opus_decoder.c $(INCLUDES)
encoder:
	$(CC) -O3 $(CFLAGS) $(ADDEDFLAGS) -c src/opus_encoder.c $(INCLUDES)

erl_opus:
	$(CC) -O3  $(CFLAGS) -c erl_opus.c $(INCLUDE)

nif:
	$(CC) -lm -Wl,-O3,-zcomberloc  $(CFLAGS) $(LOCALOBJS) -o erl_opus.so

all: libopus decoder encoder erl_opus

clean:
	rm *.o
